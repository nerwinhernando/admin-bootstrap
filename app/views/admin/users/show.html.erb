<% breadcrumb(
     {text: 'Dashboard', path: admin_root_path},
     {text: 'Users', path: admin_users_path},
     @user.name
   ) %>

<div class="container mt-4">
  <h1 class="mb-4">User Details</h1>

  <div class="card">
    <div class="card-body">
      <h5 class="card-title"><%= @user.name %></h5>
      <h6 class="card-subtitle mb-2 text-muted"><%= @user.email %></h6>
      <p class="card-text">Role: <%= @user.role.capitalize %></p>
      <p class="card-text">Created at: <%= @user.created_at.strftime('%B %d, %Y') %></p>
      <p class="card-text">Last updated: <%= @user.updated_at.strftime('%B %d, %Y') %></p>

      <%= link_to 'Edit', edit_admin_user_path(@user), class: 'btn btn-warning' %>
      <%= link_to 'Back to Users', admin_users_path, class: 'btn btn-secondary' %>
    </div>
  </div>
</div>