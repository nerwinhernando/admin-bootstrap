<% breadcrumb(
     {text: 'Dashboard', path: admin_root_path},
     {text: 'Users', path: admin_users_path},
     "Edit #{@user.name}"
   ) %>

<div class="container mt-4">
  <h1 class="mb-4">Edit User</h1>

  <%= render 'form', user: @user %>

  <%= link_to 'Show', admin_user_path(@user), class: 'btn btn-info mt-3' %>
  <%= link_to 'Back to Users', admin_users_path, class: 'btn btn-secondary mt-3' %>
</div>